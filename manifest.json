{
    "manifest_version": 2,
    "name": "Public Wifi byPass",
    "version": "0.2",
    "description": "Find and redirect to a specific link",
    "permissions": ["activeTab"],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}
